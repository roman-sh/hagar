action scan {
      filter = "^scan.*"
      numerical-trigger {
            from-value = 1
            to-value   = 0
      }
      desc = "Scan button"
      script = "scan_controller.sh"
}

action page-loaded {
      filter = "^page-loaded.*"
      numerical-trigger {
            from-value = 0
            to-value   = 1
      }
      desc = "Page loaded"
      script = "scan_controller.sh"
}

action power-save {
      filter = "^power-save.*"
      numerical-trigger {
            from-value = 0
            to-value   = 1
      }
      desc = "Power save mode"
      script = "scan_controller.sh"
}

action cover-open {
